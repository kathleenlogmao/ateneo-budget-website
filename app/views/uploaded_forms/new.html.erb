<h1 class="ateneo_h1">UPLOAD FORMS</h1>
  <h4 class="upload_form_h4">You may upload completed budget forms here. Please specify your name and select the corresponding unit from the list.</h4>
<hr>
  <%= simple_form_for @uploaded_form, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }, html: { multipart: true, novalidate: true } do |f| %>
    <%= f.input :uploaded_by %>  
    <%= f.input :unit, as: :select, collection: ["SCHOOL", "AUXILIARY", "SERVICE", "OTHER"] %>
    <%= f.input :file, as: :file %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
<hr>
